{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "es2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "lib": ["es2017", "dom"],
    "paths": {
      "@libs": ["src/libs"],
      "@src": ["src", "/"]
    }
  },

  "include": ["src"],
  "exclude": ["node_modules", "tmp"]
}
